@page
@model CardManager.Pages.Decks.DeleteModel

@{
    // Sets the browser tab title and the page heading context
    ViewData["Title"] = "Delete Deck";
}

<h1>Delete Deck</h1>

<!-- Message asking the user to confirm deletion -->
<h3>Are you sure you want to delete this deck?</h3>

<div>
    <!-- Display the deck name so the user knows what they are deleting -->
    <h4>@Model.Deck.DeckName</h4>
</div>

<!-- 
    The form posts back to the OnPostAsync() method in DeleteModel.cs.
    method="post" ensures the deck ID is sent securely in the request body.
-->
<form method="post">

    <!-- 
        Hidden field passes the DeckId back to the server.
        asp-for binds this field to Deck.DeckId in the PageModel.
    -->
    <input type="hidden" asp-for="Deck.DeckId" />

    <!-- Button that submits the deletion request -->
    <button type="submit" class="btn btn-danger">Delete</button>

    <!-- Link that cancels the delete operation and returns to the deck list -->
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
