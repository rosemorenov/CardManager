@page
@model CardManager.Pages.Cards.DeleteModel

@{
    ViewData["Title"] = "Delete Card";
}

<h1>Delete Card</h1>

<h3>Are you sure you want to delete this card?</h3>

<div>
    <h4>@Model.Card.Name (@Model.Card.CardSet)</h4>
    <dl class="row">
        <dt class="col-sm-2">Rarity</dt>
        <dd class="col-sm-10">@Model.Card.Rarity</dd>

        <dt class="col-sm-2">Mana</dt>
        <dd class="col-sm-10">@Model.Card.ManaCost</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Card.CardType</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Card.CardId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>