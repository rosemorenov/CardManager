@page
@model CardManager.Pages.Cards.DeleteModel

@{
    // Set the page title for browser display and layout use
    ViewData["Title"] = "Delete Card";
}

<h1>Delete Card</h1>

<!-- Header explaining the action -->
<h3>Are you sure you want to delete this card?</h3>

<div>
    <!-- Display basic information about the card being deleted -->
    <h4>@Model.Card.Name (@Model.Card.CardSet)</h4>

    <!-- 
        Definition list to cleanly show card properties in two columns.
        The <dt> tag is for labels, <dd> for the values.
    -->
    <dl class="row">
        <dt class="col-sm-2">Rarity</dt>
        <dd class="col-sm-10">@Model.Card.Rarity</dd>

        <dt class="col-sm-2">Mana</dt>
        <dd class="col-sm-10">@Model.Card.ManaCost</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Card.CardType</dd>
    </dl>
</div>

<!-- 
    The form posts back to the DeleteModel.OnPostAsync() handler.
    It contains a hidden input to pass the CardId for deletion.
-->
<form method="post">
    <!-- Hidden field ensures the correct card is deleted -->
    <input type="hidden" asp-for="Card.CardId" />

    <!-- Delete confirmation button -->
    <button type="submit" class="btn btn-danger">Delete</button>

    <!-- Cancel button returns the user to the list of cards -->
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>