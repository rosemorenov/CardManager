@page
@model CardManager.Pages.Cards.DetailsModel

<!-- Main container for page content -->
<div class="container mt-4">

    <!-- Page title row -->
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-primary">Card Details</h2>
            <hr />
        </div>
    </div>

    <div class="row">


        <!-- LEFT COLUMN: Displays card image -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <!-- Loads the card's image from the /images folder -->
                <img src="~/images/@Model.Card.ImageFileName" 
                     class="card-img-top img-fluid" 
                     alt="@Model.Card.Name" />
            </div>
        </div>

        <!-- RIGHT COLUMN: Displays card attributes -->
        <div class="col-md-8">
            <div class="card shadow-sm p-3">

                <!-- Card Name -->
                <h3 class="card-title">@Model.Card.Name</h3>

                <div class="row mt-3">
                    <div class="col-sm-6">

                        <!-- Display basic card properties -->
                        <p><strong>Set:</strong> @Model.Card.CardSet</p>
                        <p><strong>Type:</strong> @Model.Card.CardType</p>
                        <p><strong>SubType:</strong> @Model.Card.SubType</p>
                        <p><strong>Power:</strong> @Model.Card.Power</p>
                        <p><strong>Rarity:</strong> @Model.Card.Rarity</p>
                        <p><strong>Mana Cost:</strong> @Model.Card.ManaCost</p>
                        <p><strong>Value: $</strong> @Model.Card.Value</p>

                    </div>
                </div>

                <hr />

            </div>
        </div>

    </div>

    <!-- ACTION BUTTONS: Edit card or return to list -->
    <div class="row mt-4">
        <div class="col">

            <!-- Navigate to Edit page -->
            <a asp-page="./Edit" 
               asp-route-id="@Model.Card.CardId" 
               class="btn btn-warning">
                Edit Card
            </a>

            <!-- Back to card index page -->
            <a asp-page="./Index" 
               class="btn btn-secondary ms-2">
                Back to List
            </a>

        </div>
    </div>

</div>